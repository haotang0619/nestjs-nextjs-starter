{
  "plugins": ["prettier"],
  "extends": [
    "plugin:@nrwl/nx/react-typescript",
    "next",
    "next/core-web-vitals",
    "prettier",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": ["!**/*", ".next/**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ],
  "rules": {
    "@next/next/no-img-element": "off",
    "prettier/prettier": "error",
    "react/jsx-sort-props": [1, { "ignoreCase": true }],
    "react-hooks/exhaustive-deps": "off"
  },
  "env": {
    "jest": true
  }
}
